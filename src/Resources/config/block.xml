<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="iphp.core.block.container.class">Iphp\CoreBundle\Block\ContainerBlockService</parameter>
        <parameter key="iphp.core.block.children_rubrics.class">Iphp\CoreBundlee\Block\ChildrenRubricsBlockService</parameter>
        <parameter key="iphp.core.block.text.class">Iphp\CoreBundle\Block\TextBlockService</parameter>
        <parameter key="iphp.core.block.textplain.class">Iphp\CoreBundle\Block\TextPlainBlockService</parameter>
    </parameters>

    <services>
        <service id="iphp.core.block.container" class="%iphp.core.block.container.class%">
            <tag name="sonata.block"/>
            <argument>iphp.core.block.container</argument>
            <argument type="service" id="templating"/>
        </service>


        <service id="iphp.core.block.text" class="%iphp.core.block.text.class%">
            <tag name="sonata.block"/>
            <argument>iphp.block.text</argument>
            <argument type="service" id="templating"/>
        </service>


        <service id="iphp.core.block.textplain" class="%iphp.core.block.textplain.class%">
            <tag name="sonata.block"/>
            <argument>iphp.block.textplain</argument>
            <argument type="service" id="templating"/>
        </service>

        <!--        <service id="sonata.page.block.children_pages" class="%sonata.page.block.children_pages.class%">
            <tag name="sonata.block" />
            <argument>sonata.page.block.children_pages</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="sonata.page.site.selector" />
            <argument type="service" id="sonata.page.cms_manager_selector" />
        </service>-->
    </services>
</container>